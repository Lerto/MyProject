<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.darkheroes.GameActivity">

    <TextView
        android:text="@string/hello_world"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView4" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="bottom"
        android:layout_above="@+id/linearLayout"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="50dp">
        <Button
            android:id="@+id/mapCard1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible"/>
        <Button
            android:id="@+id/mapCard2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible"/>
        <Button
            android:id="@+id/mapCard3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible"/>
        <Button
            android:id="@+id/mapCard4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible"/>
        <Button
            android:id="@+id/mapCard5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible"/>
        <Button
            android:id="@+id/mapCard6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible"/>
        <Button
            android:id="@+id/mapCard7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="bottom"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/linearLayout">
        <Button
            android:id="@+id/deckCard1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Карта1"
            android:tag="1"
            android:onClick="onClick"/>
        <Button
            android:id="@+id/deckCard2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Карта2"
            android:tag="2"
            android:onClick="onClick"/>
        <Button
            android:id="@+id/deckCard3"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Карта3"
            android:tag="3"
            android:onClick="onClick"/>
        <Button
            android:id="@+id/deckCard4"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Карта4"
            android:tag="4"
            android:onClick="onClick" />
        <Button
            android:id="@+id/deckCard5"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Карта5"
            android:tag="5"
            android:onClick="onClick"/>
        <Button
            android:id="@+id/deckCard6"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Карта6"
            android:visibility="invisible"
            android:tag="6"
            android:onClick="onClick"/>
        <Button
            android:id="@+id/deckCard7"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Карта7"
            android:visibility="invisible"
            android:tag="7"
            android:onClick="onClick"/>
        <Button
            android:id="@+id/deckCard8"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Карта8"
            android:tag="8"
            android:visibility="invisible"
            android:onClick="onClick"/>
        <Button
            android:id="@+id/deckCard9"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Карта9"
            android:tag="9"
            android:visibility="invisible"
            android:onClick="onClick"/>
        <Button
            android:id="@+id/deckCard10"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Карта10"
            android:visibility="invisible"
            android:tag="10"
            android:onClick="onClick"/>
    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="End Turn"
        android:id="@+id/butEndTurn"
        android:onClick="endTurn"
        android:layout_below="@+id/textView4"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="84dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:id="@+id/textViewDeck"
        android:layout_above="@+id/linearLayout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/butEndTurn"
        android:layout_alignEnd="@+id/butEndTurn" />
</RelativeLayout>
